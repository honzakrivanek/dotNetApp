@model dNetApp.Models.Account

@{
    ViewBag.Title = "Edit account";
}
<h2>@ViewBag.Title</h2>

<hr />
@using (Html.BeginForm())
{
   @Html.AntiForgeryToken()
    <fieldset>

        <legend>Account</legend>

        @Html.HiddenFor(model => Model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => Model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => Model.Name)
            @Html.ValidationMessageFor(model => Model.Name, "", new { @class = "text-danger" })
        </div>
    </fieldset>

    <fieldset>

        <legend>Contacts</legend>


        @if (Model != null) {
        for(int i = 0; i < Model.Contacts.Count; i++)
        {
            <div class="editor-field">
                @Html.HiddenFor(model => Model.Contacts[i].ID)

                @Html.LabelFor(model => Model.Contacts[i].FirstName)
                @Html.TextBoxFor(model => Model.Contacts[i].FirstName)

                @Html.LabelFor(model => Model.Contacts[i].LastName)
                @Html.TextBoxFor(model => Model.Contacts[i].LastName)
                @Html.ValidationMessageFor(model => Model.Contacts[i].LastName, "", new { @class = "text-danger" })

                @Html.LabelFor(model => Model.Contacts[i].Email)
                @Html.TextBoxFor(model => Model.Contacts[i].Email)
            </div>
        }
        }
    </fieldset>
    <fieldset>
        <div class="okBtn">
            @Html.ActionLink("Back", "List")
            <input type="submit" value="Save" />
        </div>
    </fieldset>
}


